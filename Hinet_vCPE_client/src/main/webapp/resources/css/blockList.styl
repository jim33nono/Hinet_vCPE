#blockList {
  .panel-heading-btn.form-horizontal {
    > .dropdown-menu {
      width: 800px;
      left: initial;
      right: 0;
      padding: 15px;

      &:before {
        content: '';
        position: absolute;
        top: -11px;
        right: 25px;
        display: inline-block;
        border-right: 11px solid transparent;
        border-bottom: 11px solid #fff;
        border-left: 11px solid transparent;
      }
    }
  }
  
  .panel-body {
    min-height: 400px;
  }
}